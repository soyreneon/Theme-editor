{
  "name": "themeeditor",
  "displayName": "ThemeTuner â€” Real-Time Theme Editor",
  "publisher": "soyreneon",
  "description": "%extension.description%",
  "version": "1.2.2",
  "engines": {
    "vscode": "^1.99.0"
  },
  "galleryBanner": {
    "color": "#00034f",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/soyreneon/Theme-editor"
  },
  "icon": "media/logo.png",
  "categories": [
    "Themes",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "color-theme",
    "vsc-theme",
    "theme",
    "theme-editor",
    "tema",
    "editor",
    "theme-tuner",
    "color",
    "theme-customizer",
    "customization",
    "style",
    "custom-theme",
    "design",
    "designer",
    "creator",
    "creation"
  ],
  "activationEvents": [
    "onWebviewPanel:themeEditor"
  ],
  "main": "./dist/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "themeeditor.openThemeEditor",
        "title": "%command.openThemeEditor.title%"
      }
    ],
    "configuration": {
      "title": "ThemeTuner Settings",
      "properties": {
        "themeTuner.colors": {
          "type": "object",
          "default": {},
          "description": "Save custom names settings per theme."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.mjs",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.mjs --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.mjs --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.1",
    "esbuild-css-modules-plugin": "^3.1.4",
    "eslint": "^9.23.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@types/vscode-webview": "^1.57.5",
    "@uiw/react-color-chrome": "^2.8.0",
    "@vscode-elements/elements-lite": "^0.3.0",
    "@vscode/codicons": "^0.0.36",
    "@vscode/l10n": "^0.0.18",
    "jsonc-parser": "^3.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  }
}
